{
  "name": "asistencia-nfc",
  "license": "0BSD",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "start:expo": "EXPO_PUBLIC_MODE=expo expo start",
    "start:native": "EXPO_PUBLIC_MODE=native expo start",
    "start:production": "EXPO_PUBLIC_MODE=production expo start",
    "setup:native": "node scripts/setup-native.js",
    "setup:production": "node scripts/build-production.js",
    "setup:development": "node scripts/development-setup.js",
    "build:android": "EXPO_PUBLIC_MODE=production expo run:android",
    "build:ios": "EXPO_PUBLIC_MODE=production expo run:ios",
    "build:android:release": "EXPO_PUBLIC_MODE=production expo run:android --variant release",
    "build:ios:release": "EXPO_PUBLIC_MODE=production expo run:ios --configuration Release",
    "clean": "expo start --clear",
    "test:nfc": "EXPO_PUBLIC_MODE=expo expo start --clear",
    "eject": "expo eject"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-community/netinfo": "11.4.1",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.7",
    "expo": "~53.0.20",
    "expo-nfc": "^0.0.0",
    "expo-status-bar": "~2.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "^2.24.0",
    "react-native-nfc-manager": "^3.16.2",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.11.1",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "babel-plugin-module-resolver": "^5.0.2"
  },
  "private": true
}
